<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgView_SV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Name"
        android:id="@+id/txt_TenNguoiChoi"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgView_SV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txt_Tien"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:textColor="#155cf4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Money"
        android:id="@+id/txt_Tien"
        android:layout_alignBottom="@+id/imgView_SV"
        android:layout_alignLeft="@+id/txt_TenNguoiChoi"
        android:layout_alignStart="@+id/txt_TenNguoiChoi"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:textColor="#ff08b5"/>
</RelativeLayout>