<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgplay"
    tools:context="xyz.dichvuso.ailatrieuphu.Activity_Settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Âm thanh"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bật âm thanh"
        android:id="@+id/Sound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="25dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tên người chơi"
        android:id="@+id/tf_tennguoichoi"
        android:layout_below="@+id/Sound"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nhập tên của bạn"
        android:ems="10"
        android:textColor="@color/colorAccent"
        android:id="@+id/edtTen"

        android:textAlignment="center"
        android:layout_below="@+id/tf_tennguoichoi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_btn_save"
        android:text="Lưu"
        android:textColor="@color/colorTextButton"
        android:id="@+id/btnSave"
        android:layout_alignBottom="@+id/edtTen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Góp ý:"
        android:id="@+id/textView2"
        android:layout_below="@+id/edtTen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_GopY"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_Send"
        android:layout_toStartOf="@+id/btn_Send"
        android:text="Nếu có thể hãy cho tôi một nhận xét"
        android:layout_marginLeft="25dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_btn_save"
        android:text="Gửi"
        android:textColor="@color/colorTextButton"
        android:id="@+id/btn_Send"
        android:layout_alignBottom="@+id/edt_GopY"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bộ câu hỏi:"
        android:id="@+id/textView5"
        android:layout_below="@+id/edt_GopY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/edt_GopY"
        android:layout_alignStart="@+id/edt_GopY"
        android:layout_toLeftOf="@+id/btn_CauHoi"
        android:layout_toStartOf="@+id/btn_CauHoi" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_btn_save"
        android:text="Lưu"
        android:textColor="@color/colorTextButton"
        android:id="@+id/btn_CauHoi"
        android:layout_alignBottom="@+id/spinner"
        android:layout_toRightOf="@+id/edt_GopY"
        android:layout_toEndOf="@+id/edt_GopY" /><![CDATA[

    TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tên người chơi"
        android:id="@+id/lb"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnSave"
        android:layout_alignEnd="@+id/btnSave" />





]]>
</RelativeLayout>